<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/css")" rel="stylesheet" type="text/css" />
    <link href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/themes/base/css")" rel="stylesheet" type="text/css" />
    <script src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Scripts/js")"></script>
    <script src="../../Scripts/livetile-0.0.1.js" type="text/javascript"></script>
</head>
<body>
    <header>
    LiveTile.js Demo
                    <nav>
                        <div id="navcontainer">
                        </div>
                    </nav>
    </header>
    <section style="height: 550px">
        @RenderBody()
    </section>
    <br />
    <footer>
        jQuery plugin based on <a href="http://www.fiveminuteargument.com/scrolling-list-demo.html">
            Javascript</a> originally created by Bobby Jack from <a href="http://www.fiveminuteargument.com">
                www.fiveminuteargument.com</a>. Used with permission.
    </footer>
</body>
<script type="text/javascript">
var menuLoaded = false;
$(document).ready(function () {
    if($('#navcontainer')[0].innerHTML.trim() == "")
    {
        $.ajax({
                url: "@Url.Content("~/Home/MenuLayout")",
                type: "GET",
                success: function (response, status, xhr)
                            {
                                var nvContainer = $('#navcontainer');
                                nvContainer.html(response);
                                menuLoaded = true;
                            },
                error: function (XMLHttpRequest, textStatus, errorThrown)
                        {
                                var nvContainer = $('#navcontainer');
                            nvContainer.html(errorThrown);
                        }
                });
   }
});
</script>
</html>

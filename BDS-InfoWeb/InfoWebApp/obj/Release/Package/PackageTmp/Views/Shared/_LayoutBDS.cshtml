    <meta name="description" content="">
    <meta name="author" content="">
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <title>@ViewBag.Title</title>
    <!-- Bootstrap core CSS -->
    <link href="/Content/bds/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/bds/dist/css/bootstrap-datetimepicker.min.css" rel="stylesheet">

    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <link href="/Content/bds/assets/css/ie10-viewport-bug-workaround.css" rel="stylesheet">
    <link href="/Content/bds/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/bds/custom-css/style.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Just for debugging purposes. Don't actually copy these 2 lines! -->

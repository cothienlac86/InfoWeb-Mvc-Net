      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>
    <div class="container">
        <!-- Static navbar -->
        <nav class="navbar navbar-green">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" id="NarMobile" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> BĐSCC</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    @Html.Raw(Session["UIConvert"].ToString())
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown createpost">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span> Tin chính chủ</a></a>
                            <ul class="dropdown-menu">
                                <li><a href="#"><span class="glyphicon glyphicon-book" aria-hidden="true"></span> Tài liệu tham khảo</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="#"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> Quy định thỏa thuận</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="#"><span class="glyphicon glyphicon-globe" aria-hidden="true"></span> Fan page</a></li>
                                <li role="separator" class="divider"></li>
                                <li class="createpost"><a href="#"><span class="glyphicon glyphicon-heart" aria-hidden="true"></span> Kho tin chính chủ</a></li>
                            </ul>
                        </li>
                        <li><a href="/News/CreatePost"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Đăng tin</a></li>
                        
                        @if (User.Identity.IsAuthenticated) {
                            @:<li class="dropdown">
                                @:<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> @User.Identity.Name.Substring(0,6)....</a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Thông tin cá nhân", "Info", "User")</li>
                                    <li role="separator" class="divider"></li>
                                    <li>
                                        @Html.ActionLink("Tin đã đăng","MyPost","News")
                                    </li>
                                    <li role="separator" class="divider"></li>
                                    <li>
                                        @Html.ActionLink("Quản lý tin chính chủ", "Index", "PrivateNews")
                                    </li>
                                    <li role="separator" class="divider"></li>
                                    <li>
                                        @Html.ActionLink("Đổi mật khẩu", "ChangePassword", "User")
                                    </li>
                                    <li role="separator" class="divider"></li>
                                    <li>
                                        @Html.ActionLink("Đăng xuất", "Logout", "User")
                                    </li>
                                </ul>
                            @:</li>
                        }else {
                            @:<li><a href="/User/Login">Đăng nhập</a></li>
                        }
                    </ul>
                </div><!--/.nav-collapse -->
            </div><!--/.container-fluid -->
        </nav>
        @RenderBody()
        <footer>
            <hr>
            <div class="row">
                <div class="col-md-9">
                    <p>Copyright &copy; @DateTime.Now.Year -  BDSChinhchu.com.vn</p>
                    <p>BDSChinhchu.com.vn có trách nhiệm truyền tải thông tin. Không chịu bất kỳ trách nhiệm nào từ nội dung của các tin đăng.</p>
                </div>
                <div class="col-md-3">
                    <p>Hỗ trợ kỹ thuật</p>
                    <p>0902.093.039 - 0949.542.124</p>
                </div>
            </div>
        </footer>
    </div> <!-- /container -->
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script>window.jQuery || document.write('<script src="/Content/bds/assets/js/vendor/jquery.min.js"><\/script>')</script>
    <script src="/Content/bds/dist/js/moment.js"></script>
    <script src="/Content/bds/dist/js/bootstrap.min.js"></script>
    <script src="/Content/bds/dist/js/bootstrap-datetimepicker.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="/Content/bds/assets/js/ie10-viewport-bug-workaround.js"></script>
    <script type='text/javascript'>window._sbzq || function (e) { e._sbzq = []; var t = e._sbzq; t.push(["_setAccount", 32222]); var n = e.location.protocol == "https:" ? "https:" : "http:"; var r = document.createElement("script"); r.type = "text/javascript"; r.async = true; r.src = n + "//static.subiz.com/public/js/loader.js"; var i = document.getElementsByTagName("script")[0]; i.parentNode.insertBefore(r, i) }(window);</script>
    @RenderSection("scripts", required: false)
</body>
</html>
